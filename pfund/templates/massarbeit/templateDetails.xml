	<files>
		<filename>index.php</filename>
		<filename>head.php</filename>
		<filename>template_thumbnail.png</filename>
		<folder>images</folder>
		<folder>css</folder>
	</files>
	<positions>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
	</positions>
	<config>
		<fields name="params">
            <fieldset name="basic">
				<field name="logo" type="media"  directory="banners" label="URL of Logo Image" description="Enter your logo url here"	size="40"></field>
				<field name="@spacer" type="spacer" default="" label="" description=""/>
				<field name="width" type="text" default="900px" label="Template Width" description="px or %"></field>
				<field name="leftwidth" type="text" default="250px" label="Left Sidebar Width" description="px or %"></field>
				<field name="rightwidth" type="text" default="200px" label="Right Sidebar Width" description="px or %"></field>
				<field name="@spacer" type="spacer" default="" label="" description=""/>
				<field name="showPathway" type="radio" default="0" label="Show Pathway" description="Show Pathway?">
					<option value="0">JYES</option>
					<option value="1">JNO</option>
				</field>
				<field name="showBacklink" type="radio" default="0" label="Show Backlink" description="Show Backlink?">
					<option value="0">JYES</option>
					<option value="1">JNO</option>
				</field>           
			</fieldset>
        </fields>
    </config>
</extension>